<UserControl x:Class="ComicBin.Wpf.LibraryBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComicBin.Wpf" 
             xmlns:browserviews="clr-namespace:ComicBin.Wpf.BrowserViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <TabControl TabStripPlacement="Bottom">
            <TabItem Header="Folders">
                <browserviews:FolderBrowserView />
            </TabItem>
            <TabItem Header="Series">
                <browserviews:SeriesBrowserView />
            </TabItem>
        </TabControl>
    </Border>
</UserControl>
